<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Screen">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="ZonePanel">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="ZonePanel.High">
        <item name="android:background">#aa0000</item>
        <item name="android:layout_weight">33</item>
    </style>
    <style name="ZonePanel.Moderate">
        <item name="android:background">#aaaa00</item>
        <item name="android:layout_weight">33</item>
    </style>
    <style name="ZonePanel.Low">
        <item name="android:background">#00aa00</item>
        <item name="android:layout_weight">34</item>
    </style>
    <style name="dashboardPanel">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#ffff00</item>
    </style>
    <style name="dashboardPanelButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="statusPanel">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">#ffff00</item>
    </style>
    <style name="statusPanelItem">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">#ff00ff</item>
    </style>
    <style name="statusPanelItemIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="statusPanelItemText" parent="@android:style/TextAppearance">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="statusPanelItemText.HR">
        <item name="android:textColor">#00ff00</item>
    </style>
</resources>

